#!/usr/bin/env bash

if [ "$(uname -s)" = "Darwin" ]; then
    alias ls='ls --color=auto'
    alias ll='ls -al'
else
    alias open="xdg-open"
fi

export GOPATH
GOPATH=$(pwd)

if [ ! -d out/ ]; then
    mkdir out
fi


if (( ! $(find . -maxdepth 4 -type d | grep "gg" >/dev/null) == 0 )); then
    go get -v github.com/fogleman/gg
fi

lint() {
    if (( $(gofmt -w -s -e "$1") == 0 )); then
        awk '{ gsub(/\t/, "    "); print }' < "$1" > tmp
        cat tmp > "$1"
        rm tmp
    fi
}

export -f lint
