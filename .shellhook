#!usr/bin/env bash

export GOPATH=$(pwd)

if [ ! -d ./pngs/ ]; then
    mkdir pngs
fi

find -maxdepth 4 -type d | grep "gg" >/dev/null
if (( ! $? == 0 )); then
    go get -v github.com/fogleman/gg
fi

lint() {
    gofmt -w -s -e $1
    if (( $? == 0 )); then
        awk '{ gsub(/\t/, "    "); print }' < $1 > tmp
        cat tmp > $1
        rm tmp
    fi
}

export -f lint

if [ $(uname -s) = "Darwin" ]; then
    alias ls='ls --color=auto'
    alias ll='ls -al'
else
    alias open="xdg-open"
fi
